<div class="container">
  <div class="banner">
    <h1>Cocktail Bar Playa Maria</h1>
  </div>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="menu-card">
        <%= cl_image_tag cocktail.photo %>
        <!-- <img src="https://cdn.liquor.com/wp-content/uploads/2015/10/20001944/il_fullxfull.322976552.jpg"/> -->
        <div class="menu-card-content">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      </div>
    <% end %>
  </div>
    <br>
    <%= link_to "Add a new drink", new_cocktail_path, class: "btn btn-primary" %>
    <hr>
</div>

