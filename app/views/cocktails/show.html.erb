<div class="container">
<h2><%= @cocktail.name  %></h2>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <br>
<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> <%= dose.ingredient.name %>



<%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: 'are you sure?'}, class: "btn btn-info" %></p>
<% end %>

<h4><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></h4>

<%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: 'are you sure?'}, class: "btn btn-info" %></p>


<h4><%= link_to "Back to the list", cocktails_path, class: "btn btn-primary" %></h4>
</div>
