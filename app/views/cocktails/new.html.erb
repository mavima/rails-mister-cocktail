
<div class="container">
<div class="banner">
    <h1>Add a new cocktail</h1>
</div>
    <%= simple_form_for (@cocktail) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>
    <div class="form-actions">
      <%= f.submit %>
    </div>
    <% end %>
    <br>

<h4><%= link_to "Home", cocktails_path, class: "btn btn-primary" %></h4>
</div>


