
<div class="container">

    <h2>Add new cocktail</h2>

    <%= simple_form_for (@cocktail) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
    </div>
    <div class="form-actions">
      <%= f.submit %>
    </div>
    <% end %>
    <br>

<h4><%= link_to "Back to the list", cocktails_path, class: "btn btn-primary" %></h4>
</div>
